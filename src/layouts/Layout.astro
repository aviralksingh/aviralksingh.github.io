---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Aviral Singh's Portfolio" } = Astro.props;

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-white dark:bg-gray-900 font-sans">
		<div class="max-w-7xl mx-auto">
			<!-- Header with logo and social links -->
			<header class="bg-white dark:bg-gray-800 py-4 border-b border-gray-200 dark:border-gray-700">
				<div class="flex justify-between items-center px-4 sm:px-6 lg:px-8">
					<div class="flex items-center space-x-4">
						<a href="/" class="text-2xl font-bold text-[#F56600]">AS</a>
						<div class="hidden sm:flex space-x-4">
							<a href="https://github.com/yourusername" class="text-gray-600 hover:text-[#F56600]">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
							</a>
							<a href="https://linkedin.com/in/yourusername" class="text-gray-600 hover:text-[#F56600]">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
							</a>
						</div>
					</div>
				</div>
			</header>

			<!-- Main Navigation -->
			<nav class="bg-[#F56600] text-white shadow-md">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="flex justify-between h-14">
						<div class="flex">
							<div class="hidden sm:ml-6 sm:flex sm:space-x-8">
								<a
									href="/"
									class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${
										currentPath === '/'
											? 'text-white border-b-2 border-white'
											: 'text-white/80 hover:text-white border-b-2 border-transparent hover:border-white/50'
									}`}
								>
									Home
								</a>
								<a
									href="/about"
									class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${
										currentPath === '/about'
											? 'text-white border-b-2 border-white'
											: 'text-white/80 hover:text-white border-b-2 border-transparent hover:border-white/50'
									}`}
								>
									About
								</a>
								<a
									href="/projects"
									class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${
										currentPath === '/projects'
											? 'text-white border-b-2 border-white'
											: 'text-white/80 hover:text-white border-b-2 border-transparent hover:border-white/50'
									}`}
								>
									Projects
								</a>
								<a
									href="/contact"
									class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${
										currentPath === '/contact'
											? 'text-white border-b-2 border-white'
											: 'text-white/80 hover:text-white border-b-2 border-transparent hover:border-white/50'
									}`}
								>
									Contact
								</a>
							</div>
						</div>
						<div class="flex items-center sm:hidden">
							<button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-white hover:text-white/80 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
								<span class="sr-only">Open main menu</span>
								<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
								</svg>
							</button>
						</div>
					</div>
				</div>

				<!-- Mobile menu -->
				<div class="mobile-menu hidden sm:hidden">
					<div class="pt-2 pb-3 space-y-1">
						<a href="/" class={`block pl-3 pr-4 py-2 text-sm font-medium ${
							currentPath === '/'
								? 'text-white bg-[#F56600]/80 border-l-4 border-white'
								: 'text-white/80 hover:text-white hover:bg-[#F56600]/80 border-l-4 border-transparent'
						}`}>
							Home
						</a>
						<a href="/about" class={`block pl-3 pr-4 py-2 text-sm font-medium ${
							currentPath === '/about'
								? 'text-white bg-[#F56600]/80 border-l-4 border-white'
								: 'text-white/80 hover:text-white hover:bg-[#F56600]/80 border-l-4 border-transparent'
						}`}>
							About
						</a>
						<a href="/projects" class={`block pl-3 pr-4 py-2 text-sm font-medium ${
							currentPath === '/projects'
								? 'text-white bg-[#F56600]/80 border-l-4 border-white'
								: 'text-white/80 hover:text-white hover:bg-[#F56600]/80 border-l-4 border-transparent'
						}`}>
							Projects
						</a>
						<a href="/contact" class={`block pl-3 pr-4 py-2 text-sm font-medium ${
							currentPath === '/contact'
								? 'text-white bg-[#F56600]/80 border-l-4 border-white'
								: 'text-white/80 hover:text-white hover:bg-[#F56600]/80 border-l-4 border-transparent'
						}`}>
							Contact
						</a>
					</div>
				</div>
			</nav>

			<!-- Main Content -->
			<main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Main Content Area -->
					<div class="md:col-span-2">
						<slot />
					</div>

					<!-- Sidebar -->
					<div class="md:col-span-1">
						<nav class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-sm">
							<ul class="space-y-2">
								<li><a href="/about" class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">About</a></li>
								<li><a href="/projects" class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">Projects</a></li>
								<li><a href="/contact" class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">Contact</a></li>
							</ul>
						</nav>
					</div>
				</div>
			</main>

			<!-- Footer -->
			<footer class="bg-gray-100 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-8">
				<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
					<div class="text-center text-gray-600 dark:text-gray-400 text-sm">
						<p>&copy; {new Date().getFullYear()} Aviral Singh. All rights reserved.</p>
					</div>
				</div>
			</footer>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--accent: 245, 102, 0;
		--accent-light: 255, 153, 51;
		--accent-dark: 204, 51, 0;
	}

	html {
		font-family: 'Source Sans Pro', system-ui, sans-serif;
		background: #ffffff;
	}

	code {
		font-family: 'Source Sans Pro', monospace;
	}

	/* Mobile menu toggle */
	.mobile-menu {
		display: none;
	}
	.mobile-menu.active {
		display: block;
	}

	/* Global link styles */
	a:not(.no-underline) {
		@apply text-[#F56600] dark:text-[#FF9933] underline decoration-1 underline-offset-2 transition-colors duration-200;
	}

	a:not(.no-underline):hover {
		@apply text-[#CC3300] dark:text-[#FF9933];
	}

	/* Typography */
	h1, h2, h3, h4, h5, h6 {
		@apply font-serif text-gray-900 dark:text-white;
	}

	h1 {
		@apply text-3xl font-bold mb-6;
	}

	h2 {
		@apply text-2xl font-bold mb-4 mt-8;
	}

	h3 {
		@apply text-xl font-bold mb-3 mt-6;
	}

	h4 {
		@apply text-lg font-semibold mb-2 mt-4;
	}

	p {
		@apply text-gray-700 dark:text-gray-300 mb-4 leading-relaxed;
	}

	/* Highlight sections */
	.highlight {
		@apply bg-white dark:bg-gray-800 rounded-lg p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-700;
	}

	/* Card styles */
	.card {
		@apply bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700;
	}

	/* List styles */
	ul {
		@apply list-disc list-inside mb-4;
	}

	ol {
		@apply list-decimal list-inside mb-4;
	}

	li {
		@apply text-gray-700 dark:text-gray-300 mb-2;
	}

	/* Image styles */
	img {
		@apply rounded-lg shadow-sm;
	}

	/* Table styles */
	table {
		@apply w-full border-collapse mb-4;
	}

	th, td {
		@apply border border-gray-200 dark:border-gray-700 px-4 py-2;
	}

	th {
		@apply bg-gray-50 dark:bg-gray-800 font-semibold;
	}
</style>

<script>
	// Mobile menu toggle
	document.querySelector('.mobile-menu-button').addEventListener('click', function() {
		document.querySelector('.mobile-menu').classList.toggle('active');
	});
</script>
