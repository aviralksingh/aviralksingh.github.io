---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Aviral Singh's Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css" integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/grids-responsive-min.css">
	</head>
	<body class="min-h-screen bg-black text-white font-sans">
		<!-- Minimal Header -->
		<header style="width:100%;position:fixed;top:0;left:0;z-index:50;background:transparent;border:none;box-shadow:none;">
			<div class="pure-menu pure-menu-horizontal" style="width:100%;display:flex;justify-content:center;align-items:center;">
				<a href="/" class="pure-menu-heading" style="flex:1;text-align:center;color:#fff;">Aviral Singh</a>
				<ul class="pure-menu-list" style="flex:1;justify-content:flex-end;display:flex;">
					<li class="pure-menu-item"><a href="/" class={`pure-menu-link${currentPath === '/' ? ' active' : ''}`}>Home</a></li>
					<li class="pure-menu-item"><a href="/about" class={`pure-menu-link${currentPath.startsWith('/about') ? ' active' : ''}`}>About</a></li>
					<li class="pure-menu-item"><a href="/projects" class={`pure-menu-link${currentPath.startsWith('/projects') ? ' active' : ''}`}>Projects</a></li>
					<li class="pure-menu-item"><a href="/contact" class={`pure-menu-link${currentPath.startsWith('/contact') ? ' active' : ''}`}>Contact</a></li>
				</ul>
			</div>
		</header>

		<!-- Main Content -->
		<main class="pt-20">
			<slot />
		</main>

		<!-- Minimal Footer -->
		<footer class="fixed bottom-0 left-0 right-0 bg-black/80 backdrop-blur-sm py-4">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center text-sm tracking-wider">
					<div class="flex items-center space-x-2">
						<a href="https://github.com/aviralksingh">
							<img src="images/github.png" alt="GitHub" width="24" height="24" class="inline-block" />
						</a>
						<a href="https://www.linkedin.com/in/aviral-singh-a389047b/">
							<img src="images/linkedin.png" alt="LinkedIn" width="24" height="24" class="inline-block" />
						</a>
					</div>
					<p>Â© {new Date().getFullYear()} Aviral Singh</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 255, 255, 255;
		--accent-light: 200, 200, 200;
		--accent-dark: 100, 100, 100;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: #000000;
		scroll-behavior: smooth;
	}

	body {
		overflow-x: hidden;
	}

	/* Navigation */
	.pure-menu-heading, .pure-menu-link {
		color: #fff !important;
	}

	.pure-menu-link.active {
		border-bottom: 2px solid #fff;
	}

	/* Typography */
	h1, h2, h3, h4, h5, h6 {
		@apply font-light tracking-wider text-white;
	}

	h1 {
		@apply text-6xl md:text-8xl font-light mb-8;
	}

	h2 {
		@apply text-4xl md:text-6xl font-light mb-6;
	}

	h3 {
		@apply text-2xl md:text-4xl font-light mb-4;
	}

	p {
		@apply text-gray-300 mb-4 leading-relaxed tracking-wide;
	}

	/* Project Cards */
	.project-card {
		@apply relative overflow-hidden aspect-[4/3] bg-gray-900;
	}

	.project-card img {
		@apply w-full h-full object-cover transition-transform duration-700;
	}

	.project-card:hover img {
		@apply scale-110;
	}

	.project-card .overlay {
		@apply absolute inset-0 bg-black/40 opacity-0 transition-opacity duration-300;
	}

	.project-card:hover .overlay {
		@apply opacity-100;
	}

	/* Custom Scrollbar */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: #000000;
	}

	::-webkit-scrollbar-thumb {
		background: #333333;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #444444;
	}

	body {
		background: #000;
	}
</style>
