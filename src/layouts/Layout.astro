---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Aviral Singh's Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-black text-white font-sans">
		<!-- Minimal Header -->
		<header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-20">
					<a href="/" class="text-2xl font-light tracking-wider hover:text-gray-400 transition-colors">AS</a>
					<nav class="hidden md:flex space-x-12">
						<a href="/" class="nav-link text-sm tracking-wider{currentPath === '/' ? ' active' : ''}">OVERVIEW</a>
						<a href="/about" class="nav-link text-sm tracking-wider{currentPath.startsWith('/about') ? ' active' : ''}">ABOUT</a>
						<a href="/projects" class="nav-link text-sm tracking-wider{currentPath.startsWith('/projects') ? ' active' : ''}">PROJECTS</a>
						<a href="/contact" class="nav-link text-sm tracking-wider{currentPath.startsWith('/contact') ? ' active' : ''}">CONTACT</a>
					</nav>
					<button class="md:hidden text-white hover:text-gray-400 transition-colors">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
			</div>
		</header>

		<!-- Main Content -->
		<main class="pt-20">
			<slot />
		</main>

		<!-- Minimal Footer -->
		<footer class="fixed bottom-0 left-0 right-0 bg-black/80 backdrop-blur-sm py-4">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center text-sm tracking-wider">
					<p>Â© {new Date().getFullYear()} Aviral Singh</p>
					<div class="flex space-x-6">
						<a href="https://github.com/yourusername" class="hover:text-gray-400 transition-colors">GITHUB</a>
						<a href="https://linkedin.com/in/yourusername" class="hover:text-gray-400 transition-colors">LINKEDIN</a>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 255, 255, 255;
		--accent-light: 200, 200, 200;
		--accent-dark: 100, 100, 100;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: #000000;
		scroll-behavior: smooth;
	}

	body {
		overflow-x: hidden;
	}

	/* Navigation */
	.nav-link {
		position: relative;
		color: #fff;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.nav-link::after {
		content: '';
		position: absolute;
		width: 0;
		height: 1px;
		bottom: -4px;
		left: 0;
		background-color: #fff;
		transition: width 0.3s ease;
	}

	.nav-link:hover {
		color: #999;
	}

	.nav-link:hover::after {
		width: 100%;
	}

	.nav-link.active {
		color: #999;
	}

	.nav-link.active::after {
		width: 100%;
	}

	/* Typography */
	h1, h2, h3, h4, h5, h6 {
		@apply font-light tracking-wider text-white;
	}

	h1 {
		@apply text-6xl md:text-8xl font-light mb-8;
	}

	h2 {
		@apply text-4xl md:text-6xl font-light mb-6;
	}

	h3 {
		@apply text-2xl md:text-4xl font-light mb-4;
	}

	p {
		@apply text-gray-300 mb-4 leading-relaxed tracking-wide;
	}

	/* Project Cards */
	.project-card {
		@apply relative overflow-hidden aspect-[4/3] bg-gray-900;
	}

	.project-card img {
		@apply w-full h-full object-cover transition-transform duration-700;
	}

	.project-card:hover img {
		@apply scale-110;
	}

	.project-card .overlay {
		@apply absolute inset-0 bg-black/40 opacity-0 transition-opacity duration-300;
	}

	.project-card:hover .overlay {
		@apply opacity-100;
	}

	/* Custom Scrollbar */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: #000000;
	}

	::-webkit-scrollbar-thumb {
		background: #333333;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #444444;
	}
</style>
