---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Aviral Singh's Portfolio" } = Astro.props;

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-white dark:bg-gray-900 font-sans">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Simple Header -->
			<header class="py-6 border-b border-gray-200 dark:border-gray-700">
				<div class="flex justify-between items-center">
					<a href="/" class="text-xl font-bold text-[#F56600]">AS</a>
					<nav class="space-x-6">
						<a href="/" class="text-gray-600 hover:text-[#F56600]">Home</a>
						<a href="/about" class="text-gray-600 hover:text-[#F56600]">About</a>
						<a href="/projects" class="text-gray-600 hover:text-[#F56600]">Projects</a>
						<a href="/contact" class="text-gray-600 hover:text-[#F56600]">Contact</a>
					</nav>
				</div>
			</header>

			<!-- Main Content -->
			<main class="py-8">
				<slot />
			</main>

			<!-- Simple Footer -->
			<footer class="py-6 border-t border-gray-200 dark:border-gray-700">
				<div class="text-center text-gray-600 dark:text-gray-400 text-sm">
					<p>&copy; {new Date().getFullYear()} Aviral Singh. All rights reserved.</p>
				</div>
			</footer>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--accent: 245, 102, 0;
		--accent-light: 255, 153, 51;
		--accent-dark: 204, 51, 0;
	}

	html {
		font-family: 'Source Sans Pro', system-ui, sans-serif;
		background: #ffffff;
	}

	code {
		font-family: 'Source Sans Pro', monospace;
	}

	/* Global link styles */
	a:not(.no-underline) {
		@apply text-[#F56600] dark:text-[#FF9933] underline decoration-1 underline-offset-2 transition-colors duration-200;
	}

	a:not(.no-underline):hover {
		@apply text-[#CC3300] dark:text-[#FF9933];
	}

	/* Typography */
	h1, h2, h3, h4, h5, h6 {
		@apply font-serif text-gray-900 dark:text-white;
	}

	h1 {
		@apply text-3xl font-bold mb-6;
	}

	h2 {
		@apply text-2xl font-bold mb-4 mt-8;
	}

	h3 {
		@apply text-xl font-bold mb-3 mt-6;
	}

	h4 {
		@apply text-lg font-semibold mb-2 mt-4;
	}

	p {
		@apply text-gray-700 dark:text-gray-300 mb-4 leading-relaxed;
	}

	/* Highlight sections */
	.highlight {
		@apply bg-white dark:bg-gray-800 rounded-lg p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-700;
	}
</style>
