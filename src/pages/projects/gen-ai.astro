---
import Layout from '../../layouts/Layout.astro';

const genAIProjects = [
  {
    title: 'Text-to-Image Generator',
    description: 'A diffusion-based model for generating images from text prompts.',
    image: '/project-screenshots/text2img.png',
    githubUrl: 'https://github.com/yourusername/text-to-image-generator'
  },
  {
    title: 'Custom LLM Chatbot',
    description: 'A chatbot powered by a fine-tuned large language model.',
    image: '/project-screenshots/llm-chatbot.png',
    githubUrl: 'https://github.com/yourusername/custom-llm-chatbot'
  },
  {
    title: 'GAN Art Studio',
    description: 'Create unique artwork using generative adversarial networks.',
    image: '/project-screenshots/gan-art.png',
    githubUrl: 'https://github.com/yourusername/gan-art-studio'
  }
];
---

<Layout title="Generative AI Projects">
  <section style="padding: 3rem 1rem; max-width: 1100px; margin: 0 auto;">
    <h1 style="color: #fff; margin-bottom: 2rem;">Generative AI Projects</h1>
    <div class="pure-g">
      {genAIProjects.map(project => (
        <div class="pure-u-1 pure-u-md-1-3" style="padding: 1rem;">
          <a href={project.githubUrl} target="_blank" style="text-decoration: none;">
            <div style="background: #222; border-radius: 8px; padding: 1.5rem; min-height: 250px; color: #fff; transition: box-shadow 0.2s; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
              <img src={project.image} alt={project.title} style="width: 100%; border-radius: 6px; margin-bottom: 1rem;" />
              <h3 style="margin-bottom: 0.5rem;">{project.title}</h3>
              <p style="color: #ccc;">{project.description}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  </section>
</Layout>
