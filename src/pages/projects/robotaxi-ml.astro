---
import Layout from '../../layouts/Layout.astro';

const robotaxiProjects = [
  {
    title: 'Perception Stack',
    description: 'Deep learning models for object detection, tracking, and semantic segmentation in urban environments.',
    image: '/project-screenshots/perception-stack.png',
    githubUrl: 'https://github.com/yourusername/robotaxi-perception-stack'
  },
  {
    title: 'Planning & Control',
    description: 'Reinforcement learning and optimization for safe and efficient robotaxi navigation.',
    image: '/project-screenshots/planning-control.png',
    githubUrl: 'https://github.com/yourusername/robotaxi-planning-control'
  },
  {
    title: 'Simulation Platform',
    description: 'A scalable simulation environment for testing autonomous driving algorithms.',
    image: '/project-screenshots/simulation-platform.png',
    githubUrl: 'https://github.com/yourusername/robotaxi-simulation-platform'
  }
];
---

<Layout title="ML/AI for Autonomous Robotaxis">
  <section style="padding: 3rem 1rem; max-width: 1100px; margin: 0 auto;">
    <h1 style="color: #fff; margin-bottom: 2rem;">ML/AI for Autonomous Robotaxis</h1>
    <div class="pure-g">
      {robotaxiProjects.map(project => (
        <div class="pure-u-1 pure-u-md-1-3" style="padding: 1rem;">
          <a href={project.githubUrl} target="_blank" style="text-decoration: none;">
            <div style="background: #222; border-radius: 8px; padding: 1.5rem; min-height: 250px; color: #fff; transition: box-shadow 0.2s; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
              <img src={project.image} alt={project.title} style="width: 100%; border-radius: 6px; margin-bottom: 1rem;" />
              <h3 style="margin-bottom: 0.5rem;">{project.title}</h3>
              <p style="color: #ccc;">{project.description}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  </section>
</Layout>
