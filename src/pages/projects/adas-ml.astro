---
import Layout from '../../layouts/Layout.astro';

const adasProjects = [
  {
    title: 'Lane Detection System',
    description: 'Robust lane detection using deep convolutional neural networks.',
    image: '/project-screenshots/lane-detection.png',
    githubUrl: 'https://github.com/yourusername/lane-detection-system'
  },
  {
    title: 'Driver Monitoring',
    description: 'Real-time driver attention and drowsiness detection using computer vision.',
    image: '/project-screenshots/driver-monitoring.png',
    githubUrl: 'https://github.com/yourusername/driver-monitoring'
  },
  {
    title: 'Collision Avoidance',
    description: 'Sensor fusion and ML for predictive collision avoidance in ADAS.',
    image: '/project-screenshots/collision-avoidance.png',
    githubUrl: 'https://github.com/yourusername/collision-avoidance'
  }
];
---

<Layout title="ML/AI for ADAS">
  <section style="padding: 3rem 1rem; max-width: 1100px; margin: 0 auto;">
    <h1 style="color: #fff; margin-bottom: 2rem;">ML/AI for ADAS</h1>
    <div class="pure-g">
      {adasProjects.map(project => (
        <div class="pure-u-1 pure-u-md-1-3" style="padding: 1rem;">
          <a href={project.githubUrl} target="_blank" style="text-decoration: none;">
            <div style="background: #222; border-radius: 8px; padding: 1.5rem; min-height: 250px; color: #fff; transition: box-shadow 0.2s; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
              <img src={project.image} alt={project.title} style="width: 100%; border-radius: 6px; margin-bottom: 1rem;" />
              <h3 style="margin-bottom: 0.5rem;">{project.title}</h3>
              <p style="color: #ccc;">{project.description}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  </section>
</Layout>
