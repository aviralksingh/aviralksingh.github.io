---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Aviral Singh">
	<!-- Contact Header -->
	<section class="min-h-[50vh] flex items-center justify-center relative">
		<div class="absolute inset-0 bg-black/50 z-10"></div>
		<div class="absolute inset-0">
			<img src="/contact-bg.jpg" alt="Contact Background" class="w-full h-full object-cover" />
		</div>
		<div class="relative z-20 text-center">
			<h1 class="text-6xl md:text-8xl font-light tracking-wider mb-8">CONTACT</h1>
			<p class="text-xl md:text-2xl tracking-wider text-gray-300">LET'S CONNECT</p>
		</div>
	</section>

	<!-- Contact Content -->
	<section class="py-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-16">
				<div>
					<h2 class="text-4xl font-light tracking-wider mb-8">GET IN TOUCH</h2>
					<div class="space-y-8">
						<div>
							<h3 class="text-xl font-light mb-4">EMAIL</h3>
							<a href="mailto:your.email@example.com" class="text-gray-300 hover:text-white transition-colors">
								your.email@example.com
							</a>
						</div>
						<div>
							<h3 class="text-xl font-light mb-4">LOCATION</h3>
							<p class="text-gray-300">
								4200 Bayside Towers<br />
								Foster City, CA 94404<br />
								United States
							</p>
						</div>
						<div>
							<h3 class="text-xl font-light mb-4">SOCIAL</h3>
							<div class="flex space-x-6">
								<a href="https://github.com/yourusername" class="text-gray-300 hover:text-white transition-colors">
									GITHUB
								</a>
								<a href="https://linkedin.com/in/yourusername" class="text-gray-300 hover:text-white transition-colors">
									LINKEDIN
								</a>
							</div>
						</div>
					</div>
				</div>
				<div>
					<h2 class="text-4xl font-light tracking-wider mb-8">SEND A MESSAGE</h2>
					<form class="space-y-6">
						<div>
							<label for="name" class="block text-sm font-light mb-2">NAME</label>
							<input
								type="text"
								id="name"
								name="name"
								class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white focus:outline-none focus:border-white transition-colors"
								required
							/>
						</div>
						<div>
							<label for="email" class="block text-sm font-light mb-2">EMAIL</label>
							<input
								type="email"
								id="email"
								name="email"
								class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white focus:outline-none focus:border-white transition-colors"
								required
							/>
						</div>
						<div>
							<label for="message" class="block text-sm font-light mb-2">MESSAGE</label>
							<textarea
								id="message"
								name="message"
								rows="6"
								class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white focus:outline-none focus:border-white transition-colors"
								required
							></textarea>
						</div>
						<button
							type="submit"
							class="w-full bg-white text-black py-3 px-8 tracking-wider hover:bg-gray-200 transition-colors"
						>
							SEND MESSAGE
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Map Section -->
	<section class="py-20 bg-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="aspect-w-16 aspect-h-9">
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3168.627487579535!2d-122.2710843!3d37.5583223!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f9e3a8c1e1f8f%3A0x1c3c3c3c3c3c3c3c!2s4200%20Bayside%20Towers%2C%20Foster%20City%2C%20CA%2094404!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
					width="100%"
					height="100%"
					style="border:0;"
					allowfullscreen=""
					loading="lazy"
				></iframe>
			</div>
		</div>
	</section>
</Layout>

