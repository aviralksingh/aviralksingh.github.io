---
import ContactLayout from '../layouts/ContactLayout.astro';
---

<ContactLayout title="Contact - Aviral Singh">
	<div class="highlight">
		<h2 class="text-2xl font-bold mb-6">Contact Information</h2>

		<div class="space-y-6">
			<div>
				<h3 class="text-xl font-bold mb-2">Aviral Singh</h3>
				<h4 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-4">Engineering Manager ML/AI</h4>
			</div>

			<div>
				<h4 class="text-lg font-semibold mb-2">Office Address</h4>
				<p class="text-gray-700 dark:text-gray-300">
					Zoox Inc<br />
					4200 Bayside Towers<br />
					Foster City, CA 94404<br />
					<br />
					Phone: (XXX) XXX-XXXX
				</p>
				<p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
					*If no answer, please leave a message at the main office.
				</p>
			</div>

			<div>
				<h4 class="text-lg font-semibold mb-2">Email</h4>
				<p class="text-gray-700 dark:text-gray-300">
					aviralksinghz@gmail.com
				</p>
			</div>

			<div class="mt-8">
				<h4 class="text-lg font-semibold mb-4">Connect</h4>
				<div class="space-y-2">
					<p class="text-gray-700 dark:text-gray-300 flex items-center gap-1.5">
						<img src="/public/images/github.png" alt="GitHub" class="w-3 h-3" style="display:inline-block;vertical-align:middle;" />
						<a href="https://github.com/aviralksingh" class="text-[#F56600] hover:text-[#CC3300]">GitHub</a>
					</p>
					<p class="text-gray-700 dark:text-gray-300 flex items-center gap-1.5">
						<img src="/public/images/linkedin.png" alt="LinkedIn" class="w-3 h-3" style="display:inline-block;vertical-align:middle;" />
						<a href="https://www.linkedin.com/in/aviral-singh-a389047b/" class="text-[#F56600] hover:text-[#CC3300]">LinkedIn</a>
					</p>
					<p class="text-gray-700 dark:text-gray-300 flex items-center gap-1.5">
						<img src="/public/images/gmail.png" alt="Gmail" class="w-3 h-3" style="display:inline-block;vertical-align:middle;" />
						<a href="mailto:aviralksinghz@gmail.com" class="text-[#F56600] hover:text-[#CC3300]">Email</a>
					</p>
				</div>
			</div>

			<div class="mt-8">
				<h4 class="text-lg font-semibold mb-4">Location</h4>
				<div>
					<iframe
						src="https://www.google.com/maps?q=Zoox+Inc,+4200+Bayside+Towers,+Foster+City,+CA+94404&output=embed"
						width="25%"
						height="400"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						class="rounded-lg shadow-sm">
					</iframe>
				</div>
			</div>
		</div>
	</div>
</ContactLayout>

