---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Aviral Singh">
	<!-- Contact Header -->
	<section style="min-height: 40vh; display: flex; align-items: center; justify-content: center; position: relative; background: #111;">
		<div style="position: absolute; inset: 0; background: rgba(0,0,0,0.5); z-index: 10;"></div>
		<div style="position: absolute; inset: 0;">
			<img src="/contact-bg.jpg" alt="Contact Background" style="width: 100%; height: 100%; object-fit: cover;" />
		</div>
		<div style="position: relative; z-index: 20; text-align: center;">
			<h1 style="font-size: 3rem; color: #fff; margin-bottom: 1rem;">CONTACT</h1>
			<p style="font-size: 1.5rem; color: #ccc;">LET'S CONNECT</p>
		</div>
	</section>

	<!-- Contact Content -->
	<section class="pure-g" style="max-width: 1100px; margin: 0 auto; padding: 3rem 1rem;">
		<div class="pure-u-1 pure-u-md-1-2" style="padding: 1rem;">
			<h2 style="color: #fff;">Contact Information</h2>
			<ul style="color: #ccc; list-style: none; padding: 0;">
				<li><strong>Email:</strong> aviralksingh@gmail.com</li>
				<li><strong>Location:</strong> Foster City, CA</li>
				<li><strong>Phone:</strong> 248-550-8358</li>
				<li style="margin-top: 1rem;">
					<a href="https://github.com/aviralksingh" style="color: #fff; margin-right: 1rem;">GitHub</a>
					<a href="https://www.linkedin.com/in/aviral-singh-a389047b/" style="color: #fff;">LinkedIn</a>
				</li>
			</ul>
		</div>
		<div class="pure-u-1 pure-u-md-1-2" style="padding: 1rem;">
			<h2 style="color: #fff;">Send a Message</h2>
			<form class="pure-form pure-form-stacked" style="background: #222; padding: 2rem; border-radius: 8px; color: #fff;">
				<fieldset>
					<label for="name">Name</label>
					<input id="name" type="text" placeholder="Your Name" style="width: 100%; margin-bottom: 1rem;" />

					<label for="email">Email</label>
					<input id="email" type="email" placeholder="Your Email" style="width: 100%; margin-bottom: 1rem;" />

					<label for="message">Message</label>
					<textarea id="message" placeholder="Your Message" style="width: 100%; margin-bottom: 1rem;"></textarea>

					<button type="submit" class="pure-button pure-button-primary">Send</button>
				</fieldset>
			</form>
		</div>
	</section>

	<!-- Map Section -->
	<section style="background: #181818; padding: 3rem 0;">
		<div style="max-width: 900px; margin: 0 auto; text-align: center;">
			<h2 style="color: #fff; margin-bottom: 1.5rem;">Find Me Here</h2>
			<iframe src="https://www.google.com/maps?q=4200+Bayside+Towers,+Foster+City,+CA&output=embed" width="100%" height="300" style="border:0; border-radius: 8px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>
	</section>
</Layout>

