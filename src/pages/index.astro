---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Aviral Singh - Portfolio">
  <div class="min-h-[80vh] flex flex-col justify-center">
    <div class="text-center">
      <h1 class="text-4xl sm:text-6xl font-bold text-gray-900 dark:text-white mb-4">
        Hi, I'm <span class="text-purple-600 dark:text-purple-400">Aviral Singh</span>
      </h1>
      <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-300 mb-8">
        Full Stack Developer & Software Engineer
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/projects" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
          View My Work
        </a>
        <a href="/contact" class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-white font-bold py-3 px-6 rounded-lg transition duration-300">
          Contact Me
        </a>
      </div>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Web Development</h3>
        <p class="text-gray-600 dark:text-gray-300">Building modern, responsive web applications with the latest technologies.</p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Mobile Development</h3>
        <p class="text-gray-600 dark:text-gray-300">Creating cross-platform mobile applications that deliver great user experiences.</p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Cloud Solutions</h3>
        <p class="text-gray-600 dark:text-gray-300">Designing and implementing scalable cloud infrastructure and solutions.</p>
      </div>
    </div>
  </div>
</Layout>
