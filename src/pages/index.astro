---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Aviral Singh - Portfolio">
	<!-- Hero Section -->
	<section class="min-h-screen flex items-center justify-center relative">
		<div class="absolute inset-0 bg-black/50 z-10"></div>
		<div class="absolute inset-0">
			<img src="/hero-bg.jpg" alt="Background" class="w-full h-full object-cover" />
		</div>
		<div class="relative z-20 text-center">
			<h1 class="text-8xl md:text-9xl font-light tracking-wider mb-8">AVIRAL SINGH</h1>
			<p class="text-xl md:text-2xl tracking-wider text-gray-300">SOFTWARE ENGINEER & RESEARCHER</p>
		</div>
	</section>

	<!-- Projects Grid -->
	<section class="py-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-4xl md:text-6xl font-light tracking-wider mb-16 text-center">SELECTED WORK</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<a href="/projects/project1" class="project-card group">
					<img src="/project1.jpg" alt="Project 1" />
					<div class="overlay flex items-center justify-center">
						<h3 class="text-2xl font-light tracking-wider">Project One</h3>
					</div>
				</a>
				<a href="/projects/project2" class="project-card group">
					<img src="/project2.jpg" alt="Project 2" />
					<div class="overlay flex items-center justify-center">
						<h3 class="text-2xl font-light tracking-wider">Project Two</h3>
					</div>
				</a>
				<a href="/projects/project3" class="project-card group">
					<img src="/project3.jpg" alt="Project 3" />
					<div class="overlay flex items-center justify-center">
						<h3 class="text-2xl font-light tracking-wider">Project Three</h3>
					</div>
				</a>
			</div>
		</div>
	</section>

	<!-- About Preview -->
	<section class="py-20 bg-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
				<div>
					<h2 class="text-4xl md:text-6xl font-light tracking-wider mb-8">ABOUT</h2>
					<p class="text-gray-300 tracking-wide leading-relaxed mb-8">
						I'm a software engineer and researcher passionate about building innovative solutions
						that make a difference. With expertise in full-stack development and machine learning,
						I create impactful applications that solve real-world problems.
					</p>
					<a href="/about" class="inline-block text-white border border-white px-8 py-3 tracking-wider hover:bg-white hover:text-black transition-colors">
						LEARN MORE
					</a>
				</div>
				<div class="relative aspect-square">
					<img src="/about-image.jpg" alt="About" class="w-full h-full object-cover" />
				</div>
			</div>
		</div>
	</section>
</Layout>
