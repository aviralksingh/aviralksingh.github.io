---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'E-commerce Platform',
    description: 'A full-stack e-commerce solution with React, Node.js, and MongoDB.',
    image: '/project-screenshots/ecommerce.png',
    tags: ['React', 'Node.js', 'MongoDB', 'Redux'],
    slug: 'ecommerce-platform',
    githubUrl: 'https://github.com/yourusername/ecommerce-platform'
  },
  {
    title: 'Task Management App',
    description: 'A collaborative task management application with real-time updates.',
    image: '/project-screenshots/task-management.png',
    tags: ['Vue.js', 'Firebase', 'Real-time'],
    slug: 'task-management',
    githubUrl: 'https://github.com/yourusername/task-management'
  },
  {
    title: 'AI Image Generator',
    description: 'An AI-powered tool for generating and manipulating images.',
    image: '/project-screenshots/ai-generator.png',
    tags: ['Python', 'TensorFlow', 'AI/ML'],
    slug: 'ai-image-generator',
    githubUrl: 'https://github.com/yourusername/ai-image-generator'
  }
];
---

<Layout title="Projects - Aviral Singh">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
        Featured Projects
      </h1>
      <p class="text-base text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        A collection of my most impactful work, showcasing my expertise in full-stack development and software engineering.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class="group bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 overflow-hidden border border-gray-100 dark:border-gray-700">
          <div class="aspect-w-16 aspect-h-9 bg-gray-100 dark:bg-gray-700 overflow-hidden">
            <img
              src={project.image}
              alt={project.title}
              class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {project.title}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3 line-clamp-2">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-1.5 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-0.5 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded text-xs font-medium">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex justify-between items-center">
              <a
                href={`/projects/${project.slug}`}
                class="inline-flex items-center text-xs font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300"
              >
                View Details
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
              <a
                href={project.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300 transition-colors"
                aria-label="View on GitHub"
              >
                <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-10">
      <a
        href="https://github.com/yourusername"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300"
      >
        View more projects on GitHub
        <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</Layout>
