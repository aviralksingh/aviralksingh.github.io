---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'E-commerce Platform',
    description: 'A full-stack e-commerce solution with React, Node.js, and MongoDB.',
    image: '/project-screenshots/ecommerce.png',
    tags: ['React', 'Node.js', 'MongoDB', 'Redux'],
    slug: 'ecommerce-platform',
    githubUrl: 'https://github.com/yourusername/ecommerce-platform'
  },
  {
    title: 'Task Management App',
    description: 'A collaborative task management application with real-time updates.',
    image: '/project-screenshots/task-management.png',
    tags: ['Vue.js', 'Firebase', 'Real-time'],
    slug: 'task-management',
    githubUrl: 'https://github.com/yourusername/task-management'
  },
  {
    title: 'AI Image Generator',
    description: 'An AI-powered tool for generating and manipulating images.',
    image: '/project-screenshots/ai-generator.png',
    tags: ['Python', 'TensorFlow', 'AI/ML'],
    slug: 'ai-image-generator',
    githubUrl: 'https://github.com/yourusername/ai-image-generator'
  }
];
---

<Layout title="Projects - Aviral Singh">
	<!-- Projects Header -->
	<section class="min-h-[50vh] flex items-center justify-center relative">
		<div class="absolute inset-0 bg-black/50 z-10"></div>
		<div class="absolute inset-0">
			<img src="/projects-bg.jpg" alt="Projects Background" class="w-full h-full object-cover" />
		</div>
		<div class="relative z-20 text-center">
			<h1 class="text-6xl md:text-8xl font-light tracking-wider mb-8">PROJECTS</h1>
			<p class="text-xl md:text-2xl tracking-wider text-gray-300">SELECTED WORK & RESEARCH</p>
		</div>
	</section>

	<!-- Projects Grid -->
	<section class="py-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<a href="/projects/project1" class="project-card group">
					<img src="/project1.jpg" alt="Project 1" />
					<div class="overlay flex flex-col items-center justify-center p-8">
						<h3 class="text-3xl font-light tracking-wider mb-4">Project One</h3>
						<p class="text-gray-300 text-center">A brief description of the project and its impact.</p>
					</div>
				</a>
				<a href="/projects/project2" class="project-card group">
					<img src="/project2.jpg" alt="Project 2" />
					<div class="overlay flex flex-col items-center justify-center p-8">
						<h3 class="text-3xl font-light tracking-wider mb-4">Project Two</h3>
						<p class="text-gray-300 text-center">A brief description of the project and its impact.</p>
					</div>
				</a>
				<a href="/projects/project3" class="project-card group">
					<img src="/project3.jpg" alt="Project 3" />
					<div class="overlay flex flex-col items-center justify-center p-8">
						<h3 class="text-3xl font-light tracking-wider mb-4">Project Three</h3>
						<p class="text-gray-300 text-center">A brief description of the project and its impact.</p>
					</div>
				</a>
				<a href="/projects/project4" class="project-card group">
					<img src="/project4.jpg" alt="Project 4" />
					<div class="overlay flex flex-col items-center justify-center p-8">
						<h3 class="text-3xl font-light tracking-wider mb-4">Project Four</h3>
						<p class="text-gray-300 text-center">A brief description of the project and its impact.</p>
					</div>
				</a>
			</div>
		</div>
	</section>

	<!-- Contact CTA -->
	<section class="py-20 bg-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-4xl md:text-6xl font-light tracking-wider mb-8">LET'S WORK TOGETHER</h2>
			<p class="text-xl text-gray-300 mb-12 max-w-3xl mx-auto">
				Interested in collaborating on a project? I'm always open to discussing new opportunities and ideas.
			</p>
			<a href="/contact" class="inline-block text-white border border-white px-8 py-3 tracking-wider hover:bg-white hover:text-black transition-colors">
				GET IN TOUCH
			</a>
		</div>
	</section>
</Layout>
