---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Generative AI',
    description: 'Exploring the latest in large language models, diffusion models, and generative adversarial networks for creative and industrial applications.',
    image: '/project-screenshots/genai.png',
    tags: ['GenAI', 'LLM', 'Diffusion', 'GANs'],
    slug: 'gen-ai'
  },
  {
    title: 'ML/AI for Autonomous Robotaxis',
    description: 'Machine learning and AI systems powering perception, planning, and control for fully autonomous robotaxi fleets.',
    image: '/project-screenshots/robotaxi.png',
    tags: ['Autonomous Vehicles', 'Perception', 'Planning', 'Control'],
    slug: 'robotaxi-ml'
  },
  {
    title: 'ML/AI for ADAS',
    description: 'Advanced Driver Assistance Systems (ADAS) using deep learning for safety, comfort, and semi-autonomous driving.',
    image: '/project-screenshots/adas.png',
    tags: ['ADAS', 'Deep Learning', 'Safety', 'Computer Vision'],
    slug: 'adas-ml'
  }
];
---

<Layout title="Projects - Aviral Singh">
	<section style="min-height: 40vh; display: flex; align-items: center; justify-content: center; position: relative; background: #111;">
		<div style="position: absolute; inset: 0; background: rgba(0,0,0,0.5); z-index: 10;"></div>
		<div style="position: absolute; inset: 0;">
			<img src="/projects-bg.jpg" alt="Projects Background" style="width: 100%; height: 100%; object-fit: cover;" />
		</div>
		<div style="position: relative; z-index: 20; text-align: center;">
			<h1 style="font-size: 3rem; color: #fff; margin-bottom: 1rem;">PROJECTS</h1>
			<p style="font-size: 1.5rem; color: #ccc;">SELECTED WORK & RESEARCH</p>
		</div>
	</section>

	<section style="background: #181818; padding: 3rem 0;">
		<div style="max-width: 1100px; margin: 0 auto;">
			<div class="pure-g">
				{projects.map(project => (
					<div class="pure-u-1 pure-u-md-1-3" style="padding: 1rem;">
						<a href={`/projects/${project.slug}`} style="text-decoration: none;">
							<div style="background: #222; border-radius: 8px; padding: 1.5rem; min-height: 250px; color: #fff; transition: box-shadow 0.2s; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
								<img src={project.image} alt={project.title} style="width: 100%; border-radius: 6px; margin-bottom: 1rem;" />
								<h3 style="margin-bottom: 0.5rem;">{project.title}</h3>
								<p style="color: #ccc; margin-bottom: 1rem;">{project.description}</p>
								<div>
									{project.tags.map(tag => (
										<span style="background: #333; color: #fff; border-radius: 4px; padding: 0.2rem 0.6rem; margin-right: 0.3rem; font-size: 0.9rem;">{tag}</span>
									))}
								</div>
							</div>
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<section style="background: #111; padding: 3rem 0;">
		<div style="max-width: 900px; margin: 0 auto; text-align: center;">
			<h2 style="color: #fff; margin-bottom: 1.5rem;">Want to collaborate?</h2>
			<p style="color: #ccc; margin-bottom: 2rem;">I'm always open to new opportunities and collaborations in AI, robotics, and autonomous systems. Let's build something amazing together.</p>
			<a href="/contact" class="pure-button pure-button-primary" style="font-size: 1.1rem;">Get in Touch</a>
		</div>
	</section>
</Layout>
